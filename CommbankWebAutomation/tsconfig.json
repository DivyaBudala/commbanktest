{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "lib": ["es2018", "dom", "es5"],
    "paths": {
      "*": ["./*"],
      "src/*": ["./src/*"]
    },
    "target": "es5",
    "typeRoots": ["./types", "./node_modules/@types"],
    "types": ["node", "@wdio/sync", "chai", "@wdio/cucumber-framework", "reflect-metadata", "@types/chai", "@types/cucumber"],
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts"]
}
